<div class="container ">
<h2>Personas</h2>
  <hr>
<div class="table-responsive">
  <table class = "table">
  <thead class="table-header">

    <tr>
      <th>Nombre</th>
      <th>Apellido</th>
      <th>Cédula</th>
      <th>Email</th>
      <th>Teléfono</th>
      <th>Dirección</th>
      <th>Fecha de inicio</th>
      <th colspan="3"></th>
    </tr>
    </thead>

  <tbody>
    <% @people.each do |person| %>
      <tr>
        <td><%= person.nombre %></td>
        <td><%= person.apellido %></td>
        <td><%= person.cedula %></td>
        <td><%= person.correoElectronico %></td>
        <td><%= person.telefono %></td>
        <td><%= person.direccion %></td>
        <td><% if person.birth_date != nil %>
              <%=person.birth_date.to_s[0..9]%>
            <%else%>
              Indefinida
            <%end%>
        </td>
        <td><%= link_to 'Ver', person %></td>
        <td><%= link_to 'Editar', edit_person_path(person) %></td>
        <td><%= link_to 'Eliminar', person, method: :delete, data: { confirm: '¿Estás seguro?' } %></td>
      </tr>
    <% end %>
  </tbody>
  </table>
  <br>
  <%= link_to 'Nueva persona', new_person_path %>
</div>
</div>
